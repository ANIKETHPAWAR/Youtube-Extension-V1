{
    "manifest_version": 3,
    "name": "YouTube Comment Search",
    "description": "Search comments on YouTube videos",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "scripting"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "yt1.png",
        "48": "yt1.png",
        "128": "yt1.png"
      }
    },
    "icons": {
      "16": "yt1.png",
      "48": "yt1.png",
      "128": "yt1.png"
    },
    "host_permissions": [
      "https://www.googleapis.com/youtube/v3/*"
    ]
  }
  